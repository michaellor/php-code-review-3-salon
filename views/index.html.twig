<html>
<head>
    <title></title>
</head>
<body>
  <div class="container">
    <h1>Hair Salon Directory</h1>

    <form action="/" method="post">
      <label for="stylist_name">Stylist Name:</label>
      <input name="stylist_name" type="text">
      <button type="submit">Add</button>
    </form>

    <p><em>Stylists</em></p>

      {% for stylist in stylists %}
        <li><a href="/stylist/{id}">{{ stylist.getName }}</a></li>
          <form action="/{id}/edit" method="get">
            <button type="submit">Edit</button>
          </form>
          <form action="/" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit">Delete</button>
          </form>
      {% endfor %}


  </div>
</body>
</html>
